<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CaptureTheMoment"
    android:background="@drawable/capture_the_moment_background"
    >



    <ImageView
        android:id="@+id/capture_the_moment_photo"
        android:layout_width="414dp"
        android:layout_height="386dp"
        app:layout_constraintBottom_toTopOf="@+id/capture_the_moment_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.793" />

    <Button
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/capture_the_moment_camera"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/capture_the_moment_photo"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="52dp"
        android:text="@string/camera_btn"
        android:background="@drawable/my_shape_blue"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="18dp"
        />

    <TextView
        android:id="@+id/capture_the_moment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/capture_the_moment_text"
        android:textColor="@color/black"
        android:visibility="invisible"
        android:textStyle="bold|italic"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/capture_the_moment_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>